<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.squaredesk.nova</groupId>
    <artifactId>bom</artifactId>
    <version>4.0.0-beta-2</version>
    <packaging>pom</packaging>

    <name>Nova BOM</name>
    <description>Java libraries for rapid (micro) service development</description>
    <url>https://squaredesk.ch</url>

    <licenses>
        <license>
            <name>Squaredesk Open Source License</name>
            <url>https://squaredesk.ch/license/oss/LICENSEt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Oliver Dotzauer</name>
            <email>oliver@squaredesk.ch</email>
            <organization>squaredesk GmbH</organization>
            <organizationUrl>https://squaredesk.ch</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/oli-d/nova.git</connection>
        <developerConnection>scm:git:ssh://github.com:oli-d/nova.git</developerConnection>
        <url>https://github.com/oli-d/nova/tree/master</url>
    </scm>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <properties>
        <version.test-utils>4.0.0-beta2</version.test-utils>

        <version.core>4.0.0-beta2</version.core>
        <version.spring-support>4.0.0-beta2</version.spring-support>
        <version.event-annotations>4.0.0-beta2</version.event-annotations>

        <version.service>4.0.0-beta2</version.service>

        <version.comm>4.0.0-beta2</version.comm>
        <version.comm-annotations>4.0.0-beta2</version.comm-annotations>
        <version.jms>4.0.0-beta2</version.jms>
        <version.http>4.0.0-beta2</version.http>
        <version.http-spring>4.0.0-beta2</version.http-spring>
        <version.rest-annotations>4.0.0-beta2</version.rest-annotations>
        <version.websockets>4.0.0-beta2</version.websockets>
        <version.websockets-annotations>4.0.0-beta2</version.websockets-annotations>
        <version.kafka>4.0.0-beta2</version.kafka>

        <version.metrics-serialization>4.0.0-beta2</version.metrics-serialization>
        <version.metrics-elastic>4.0.0-beta2</version.metrics-elastic>
        <version.metrics-kafka>4.0.0-beta2</version.metrics-kafka>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>test-utils</artifactId>
                <version>${version.test-utils}</version>
            </dependency>

            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>core</artifactId>
                <version>${version.core}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>spring-support</artifactId>
                <version>${version.spring-support}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>event-annotations</artifactId>
                <version>${version.event-annotations}</version>
            </dependency>

            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>service</artifactId>
                <version>${version.service}</version>
            </dependency>

            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>comm</artifactId>
                <version>${version.comm}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>comm-annotations</artifactId>
                <version>${version.comm-annotations}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>jms</artifactId>
                <version>${version.jms}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>http</artifactId>
                <version>${version.http}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>http-spring</artifactId>
                <version>${version.http-spring}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>rest-annotations</artifactId>
                <version>${version.rest-annotations}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>websockets</artifactId>
                <version>${version.websockets}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>websockets-annotations</artifactId>
                <version>${version.websockets-annotations}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>kafka</artifactId>
                <version>${version.kafka}</version>
            </dependency>

            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>metrics-serialization</artifactId>
                <version>${version.metrics-serialization}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>metrics-elastic</artifactId>
                <version>${version.metrics-elastic}</version>
            </dependency>
            <dependency>
                <groupId>ch.squaredesk.nova</groupId>
                <artifactId>metrics-kafka</artifactId>
                <version>${version.metrics-kafka}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>parentpom</module>

        <module>test-utils</module>

        <module>core</module>
        <module>spring-support</module>
        <module>event-annotations</module>

        <module>service</module>

        <module>comm</module>
        <module>comm-annotations</module>
        <module>jms</module>
        <module>http</module>
        <module>http-spring</module>
        <module>rest-annotations</module>
        <module>websockets</module>
        <module>websockets-annotations</module>
        <module>kafka</module>

        <module>metrics-serialization</module>
        <module>metrics-elastic</module>
        <module>metrics-kafka</module>
    </modules>

